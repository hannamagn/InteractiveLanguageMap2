import json
import time
import random
import os
import requests
import simplekml
import xml.etree.ElementTree as ET
from alive_progress import alive_bar

def create_KML(requestedKMLfile, language, countries):
    tree = ET.parse(requestedKMLfile)
    root = tree.getroot()
    kml = simplekml.Kml()

    for place in root.findall(".//place"):
        place_name = place.get("display_name", "Unknown")
        for coords_element in place.findall(".//Polygon/outerBoundaryIs/LinearRing/coordinates"):
            coordinates_text = coords_element.text.strip()           
            coords = []
            for coord in coordinates_text.split():
                lon, lat = map(float, coord.split(",")[:2])  
                coords.append((lon, lat))

            pol = kml.newpolygon(
                    name=place_name,
                    outerboundaryis=coords
                )
            

            pol.extendeddata.newdata(name="Language", value=language, displayname="Language")
            pol.extendeddata.newdata(name="Countries", value=", ".join(countries), displayname="Countries")

            # Add Popup Description maybe, in google earth the extended data already gets shown so it could have some info or something
            pol.description = f"""
            <![CDATA[
            <h3>{language}</h3>
            <p><b>Countries:</b> {', '.join(countries)}</p>
            ]]>
            """
    output_folder = "KML_output"
    os.makedirs(output_folder, exist_ok=True)
    kml_file = f"{language.split('/')[-1]}.kml"
    kml_path = os.path.join(output_folder, kml_file)

    # Save the new KML need new name and place
    kml.save(kml_path)
    print(f"New kml created of {language} in: [{kml_path}]")

    

def nomimantim_create_OSMquery(osmid):
    osm_ids = ",".join([f"R{id}" for id in osmid])
    query = f"https://nominatim.openstreetmap.org/lookup?osm_ids={osm_ids}&polygon_kml=1"

    return query


def create_kml_files(language_json_object):
    headers = {
        "User-Agent": "Testing for a school project - felixjon@net.chalmers.se" 
    }

    total_entries = len(language_json_object)
    with alive_bar(total_entries, title="üõåüõåüõåzzzZZZZ") as bar:
        for entry in language_json_object:
            language_country_id = []
            country_names = []
            
            language_country_id = [entry["countryOSM"]] if "countryOSM" in entry else []

            country_names = [entry["countryLabel"]] if "countryLabel" in entry else []

            language_kml_query = nomimantim_create_OSMquery(language_country_id)
            response = requests.get(language_kml_query, headers=headers)
            time.sleep(0.5) 
            bar()

            apidata_folder = "RAW_output"
            os.makedirs(apidata_folder, exist_ok=True)   

            file_title = f"{entry['languageLabel'].replace(' ', '_')}raw.kml"
            file_path = os.path.join(apidata_folder, file_title)

            with open (file_path, "wb") as f:
                f.write(response.content)

            print(f"API data put in: [{file_path}]")
            create_KML(file_path, entry["language"], country_names)
        

def main():
    user_input = input("Input json file name here (Sweden_entries.json): ")

    with open(f"wikidata/countryData/{user_input}", "r", encoding="utf-8") as file:
        language_data = json.load(file)

    create_kml_files(language_data)
    print("WAKE UP üßç‚Äçüßç‚Äçüßç WAKE UP")
    print("Take a look in KML_output")

if __name__ == "__main__":
    main()